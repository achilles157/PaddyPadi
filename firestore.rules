rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Reports: Key for user privacy
    // Allow users to create reports
    // Allow users to read/update/delete ONLY their own reports
    match /reports/{reportId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isOwner(resource.data.userId);
    }

    // Diseases: Public read, Admin write (managed via Console for now)
    match /diseases/{diseaseId} {
      allow read: if true;
      allow write: if false; // Temporarily lock writes to Console/Admin SDK
    }

    // Users: User can read/write their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Default deny for everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
