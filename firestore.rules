rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Reports: Key for user privacy but open for Epidemiology (Map)
    // Reports: Key for user privacy but open for Epidemiology (Map)
    match /reports/{reportId} {
      // Allow PUBLIC READ for reports (for the Map/Community feature)
      allow read: if true;
      
      // Allow creation if the userId matches the auth uid
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Update and Delete are STRICTLY limited to the owner
      allow update, delete: if isOwner(resource.data.userId);
    }

    // Diseases: Public read, Admin write (managed via Console for now)
    match /disease/{diseaseId} {
      allow read: if true;
      allow write: if false; // Temporarily lock writes to Console/Admin SDK
    }

    // Users: User can read/write their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Default deny for everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
