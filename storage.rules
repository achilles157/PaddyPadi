rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{userId}/{allPaths=**} {
      // Allow access if the user matches the path segment
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow public read for widely used assets if necessary (e.g. models)
    match /models/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
